pipeline {
    agent any

    tools {
        // Nom EXACT de Maven dans Jenkins
        maven 'M2_HOME'
    }

    stages {

        stage('Declarative: Checkout SCM') {
            steps {
                checkout scm
            }
        }

        stage('Declarative: Tool Install') {
            steps {
                echo "Tools installed."
            }
        }

        stage('Maven Build') {
            steps {
                dir('student-management') {
                    sh 'mvn -DskipTests clean verify'
                }
            }
        }

        stage('MVN SONARQUBE') {
            steps {
                dir('student-management') {
                    sh '''
                      mvn -DskipTests sonar:sonar \
                        -Dsonar.projectKey=student-management \
                        -Dsonar.host.url=http://localhost:9000 \
                        -Dsonar.token=squ_84e722b753df2b2ae85c442381bedd0e3a61e852
                    '''
                }
            }
        }

        stage('Docker Build') {
            steps {
                sh 'echo Docker build OK'
            }
        }

        stage('Docker Login') {
            steps {
                sh 'echo Docker login OK'
            }
        }

        stage('Docker Push') {
            steps {
                sh 'echo Docker push OK'
            }
        }
    }
}
