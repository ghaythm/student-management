pipeline {
    agent any

    tools {
        // nom exact du Maven dans Jenkins
        maven 'M2_HOME'
    }

    stages {

        stage('Maven Build') {
            steps {
                // aller dans le dossier qui contient pom.xml
                dir('student-management') {
                    sh 'mvn -DskipTests clean verify'
                }
            }
        }

        stage('MVN SONARQUBE') {
            steps {
                dir('student-management') {
                    sh '''
                      mvn -DskipTests sonar:sonar \
                        -Dsonar.projectKey=student-management \
                        -Dsonar.host.url=http://localhost:9000 \
                        -Dsonar.login=admin \
                        -Dsonar.password=sonar
                    '''
                }
            }
        }

        stage('Docker Build') {
            steps {
                dir('student-management') {
                    sh 'echo "Docker build OK (atelier)"'
                }
            }
        }

        stage('Docker Login') {
            steps {
                dir('student-management') {
                    sh 'echo "Docker login OK (atelier)"'
                }
            }
        }

        stage('Docker Push') {
            steps {
                dir('student-management') {
                    sh 'echo "Docker push OK (atelier)"'
                }
            }
        }
    }
}
