pipeline {
    agent any

    tools {
        maven 'M3'   // mets ici le NOM EXACT de Maven dans Jenkins
    }

    stages {
        stage('Maven Build') {
            steps {
                sh 'mvn clean verify'
            }
        }

        stage('MVN SONARQUBE') {
            steps {
                sh '''
                  mvn sonar:sonar \
                    -Dsonar.projectKey=student-management \
                    -Dsonar.host.url=http://localhost:9000 \
                    -Dsonar.login=admin \
                    -Dsonar.password=sonar
                '''
            }
        }

        stage('Docker Build') {
            steps {
                sh '''
                  echo "Fake Docker build pour l atelier"
                  exit 1
                '''
            }
        }

        stage('Docker Login') {
            steps {
                sh '''
                  echo "Fake Docker login pour l atelier"
                  exit 1
                '''
            }
        }

        stage('Docker Push') {
            steps {
                sh '''
                  echo "Fake Docker push pour l atelier"
                  exit 1
                '''
            }
        }
    }
}
